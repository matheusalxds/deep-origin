  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "TZ=America/Sao_Paulo nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --no-cache --runInBand",
    "test:watch": "yarn test --watch",
    "test:cov": "yarn test --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "yarn test -- --watchAll --config=jest-unit-config.js",
    "test:integration": "yarn test -- --watchAll -c=jest-integration-config.js",
    "test:only": "yarn test --watchAll",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:new": "npm run typeorm migration:create -- src/shared/database/postgresql/migrations/rel-soil-analysis-physical-table",
    "migration:run": "npm run typeorm migration:run -- -d ./data-source.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ./data-source.ts",
    "up": "docker-compose up -d",
    "down": "docker-compose down",
    "check": "npm-check -s -u"
  },
  "dependencies": {
    "@apollo/client": "^3.13.4",
